<h1 class="mt-3">Save any kind of movies</h1>

<h3 class="mb-2">My Lists</h3>

<%= link_to 'Create a movie list', new_list_path, class: 'btn btn-primary mt-2' %>

<% @lists.each do |list| %>
    <%= link_to list_path(list), class:'text-decoration-none' do %>
      <%= list.name %>
    <% end %>
<% end %>
