
<h1 class="mt-3"><%= @list.name %></h1>

<div>
  <%= link_to 'add a movie', new_list_bookmark_path(@list), class: 'btn btn-success' %>
  <%= link_to 'delete this list', list_path(@list), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this list?' } %>
</div>

<% @list.movies.each do |movie| %>

  <div class="card mt-3" style="width: 25rem; height: 7rem">
  <%= image_tag movie.poster_url, alt: movie.title, class: 'card-img-top' %>
  <div class="card-body">
    <h5 class="card-title"> <%= movie.title %> </h5>
     <h6 class="card-subtitle mb-2 text-muted"> <%= movie.rating %> </h6>
    <p class="card-text"> <%= movie.overview %> </p>
    <%= link_to 'delete', bookmark_path, method: :delete, data: { confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list"}, class: 'btn btn-danger' %>
  </div>
</div>

<% end %>



